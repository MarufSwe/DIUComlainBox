<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khanmaruf.diucomlainbox.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="#000">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="24"
            android:layout_marginTop="5dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:background="#fde200">

            <ImageView
                android:id="@+id/btEmerjency"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@drawable/emergency" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:weightSum="3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="#fff">

            <ImageView
                android:id="@+id/imageViewEquipment"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@drawable/equipment" />

            <TextView
                android:id="@+id/tbEquipment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:text="Equipment"
                android:gravity="center"
                android:textSize="23dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_marginTop="5dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:background="#fff">

            <ImageView
                android:id="@+id/imageViewHarassment"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@drawable/harassment" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/tbHarassment"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:text="Harasment"
                android:gravity="center"
                android:textSize="23dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="27"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:background="#fff">

            <ImageView
                android:id="@+id/imageViewDemands"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@drawable/demand" />


            <TextView
                android:id="@+id/tbDamage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:text="Demand"
                android:gravity="center"
                android:textSize="23dp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
