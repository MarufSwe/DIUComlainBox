<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khanmaruf.diucomlainbox.detailsInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="10dp"
               android:textSize="30dp"
               android:textColor="?android:attr/colorMultiSelectHighlight"
               android:text="Campus"/>

           <TextView
               android:id="@+id/tb_campus"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:textSize="25dp"
               />


           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="10dp"
               android:textColor="?android:attr/colorMultiSelectHighlight"
               android:textSize="30dp"
               android:text="Building"/>

           <TextView
               android:id="@+id/tb_building"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:textSize="25dp"
               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="10dp"
               android:textColor="?android:attr/colorMultiSelectHighlight"
               android:textSize="30dp"
               android:text="Status"/>

           <TextView
               android:id="@+id/tb_status"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:textSize="25dp"
               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="10dp"
               android:textColor="?android:attr/colorMultiSelectHighlight"
               android:textSize="30dp"
               android:text="Type"/>

           <TextView
               android:id="@+id/tb_type"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:textSize="25dp"
               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="10dp"
               android:textSize="30dp"
               android:textColor="?android:attr/colorMultiSelectHighlight"
               android:text="Submit Date"/>

           <TextView
               android:id="@+id/tb_date"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:textSize="25dp"
               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="10dp"
               android:textSize="30dp"
               android:textColor="?android:attr/colorMultiSelectHighlight"
               android:text="Detail"/>

           <TextView
               android:id="@+id/tb_detail"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:textSize="25dp"
               />

         </LinearLayout>


    </ScrollView>

</FrameLayout>
